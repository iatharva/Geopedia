<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rctime">

    <ImageButton
        android:id="@+id/com_propic"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:src="@drawable/user_color_50"/>

    <TextView
        android:id="@+id/com_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65sp"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/username"
        android:textColor="@color/Black"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/com_here"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/comm"
        android:layout_below="@+id/com_user"
        android:layout_marginStart="65sp"
        android:textSize="18sp"/>
    <Space
        android:layout_height="5dp"
        android:layout_width="wrap_content"
        android:layout_below="@+id/com_here"/>

</RelativeLayout>